<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TableLayout
        android:id="@+id/addReysTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:id="@+id/reysTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1px"
                    android:layout_marginLeft="0.5px"
                    android:layout_marginRight="0.5px"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:textColor="@android:color/black">
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/calenda" />
                </RelativeLayout>



                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="Сертиф."
                    android:textColor="@android:color/black" >
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/odometer" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:textColor="@android:color/black">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/zapchast" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:textColor="@android:color/black">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/brend" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="4"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"

                    android:background="@android:color/white"
                    android:gravity="center"
                    android:textColor="@android:color/black">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/dol"></TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="5"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"

                    android:background="@android:color/white"
                    android:gravity="center"
                    android:textColor="@android:color/black">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/servis_men"></TextView>
                </RelativeLayout>

            </TableRow>
        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/dateService"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:text="Дата"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="0.5px"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"

                android:textColor="@android:color/darker_gray" />



            <EditText
                android:id="@+id/kmService"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="Пробіг"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:singleLine="true" />

            <EditText
                android:id="@+id/zapchastService"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="Запчасть"
                android:textColorHint="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/brendService"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="Марка"
                android:textColorHint="@android:color/darker_gray"/>

            <EditText
                android:id="@+id/priceService"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="Ціна"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/serviceName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="5"
                android:layout_gravity="center"
                android:layout_marginBottom="1px"
                android:layout_marginRight="1px"
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:hint="Сервіс"
                android:textColorHint="@android:color/darker_gray"/>


        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_below="@+id/addReysTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Зберегти"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Видалити"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>